<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff59d"
    tools:context="com.fernandez.fernandez_labquiz.SecondActivity">

    <ImageView
        android:id="@+id/iv_welcome"
        android:layout_width="250dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/weeelcome"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/et_uuuser"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:hint="user"
        android:layout_below="@+id/iv_welcome"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/et_uuuser"
        android:layout_centerHorizontal="true"
        android:text="Logout"
        android:background="#ffa726"
        android:layout_marginTop="120dp"
        android:onClick="callMainActivity"/>

</RelativeLayout>
